{
  "name": "lady-byron/trend",
  "description": "The trending discussions for Flarum",
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2",
    "afrux/forum-widgets-core": "*",
    "ext-json": "*"
  },
  "suggest": {
    "fof/discussion-views": "Provides view_count for trending score calculation (Flarum 2.0 compatible)",
    "michaelbelgium/flarum-discussion-views": "Provides view_count for trending score calculation (Flarum 1.x only)"
  },
  "autoload": {
    "psr-4": {
      "Liplum\\Trends\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flop Trend",
      "category": "feature",
      "icon": {
        "name": "fas fa-fire-alt",
        "backgroundColor": "#5B8C5A",
        "color": "#fff"
      }
    }
  }
}
